# Example .env file for the calculator project
# Copy this to `.env` and update values for your local environment.

# Base directory for the calculator project (default: project root)
CALCULATOR_BASE_DIR=./

# Maximum number of history entries to keep (default: 1000)
CALCULATOR_MAX_HISTORY_SIZE=1000

# Auto-save history after each calculation (true/false or 1/0)
CALCULATOR_AUTO_SAVE=true

# Decimal precision used for calculations (default: 10)
CALCULATOR_PRECISION=10

# Maximum numeric input value accepted (default: 1e999)
CALCULATOR_MAX_INPUT_VALUE=1e999

# Default file encoding (default: utf-8)
CALCULATOR_DEFAULT_ENCODING=utf-8

# Optional overrides for log/history directories and files
CALCULATOR_LOG_DIR=./logs
CALCULATOR_HISTORY_DIR=./history
CALCULATOR_HISTORY_FILE=./history/calculator_history.csv
CALCULATOR_LOG_FILE=./logs/calculator.log
